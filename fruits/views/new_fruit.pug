extends layout

block content
    h2 New Fruit Page
    form(
        action="/fruits"
        method="POST"
    )
        div
            label Name:
            input(
                type="text"
                name="name"
            )
        div
            label Color: 
            input(
                type="text"
                name="color"
            )
        div
            label Is Ready to Eat?
            input(
                type="checkbox"
                name="readyToEat"
            )
        input(
            type="submit"
            value="Create Fruit"
        )



